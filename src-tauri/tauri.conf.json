{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:9000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Alexandria",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "protocol":{
        "asset": true,
        "assetScope": ["**"]
      },
      "http": {
        "all": true,
        "scope": ["https://fonts.gstatic.com/*","https://fonts.googleapis.com/*"],
        "request": true
      },
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.btpf.alexandria",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Alexandria",
        "width": 800,
        "fileDropEnabled": true,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
