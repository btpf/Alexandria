{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:9000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Alexandria",
    "version": "../package.json"
  },
  "tauri": {
    "security": {
      "csp": "default-src 'self' blob: https://asset.localhost/ http://127.0.0.1:16780/ https://en.wiktionary.org https://fonts.gstatic.com/ https://fonts.googleapis.com/; style-src 'self' 'unsafe-inline' blob: https://asset.localhost/ https://fonts.googleapis.com/; img-src data:"
    },
    "cli": {
      "args": [{
        "name": "source",
        "index": 1,
        "takesValue": true
      }]
    },
    "allowlist": {
      "protocol":{
        "asset": true,
        "assetScope": ["**"]
      },
      "http": {
        "all": true,
        "scope": ["https://fonts.gstatic.com/*","https://fonts.googleapis.com/*"],
        "request": true
      },
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": [],
        "desktopTemplate":"desktopTemplate.hbs"
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.btpf.alexandria",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Alexandria",
        "width": 800,
        "fileDropEnabled": true,
        "decorations": false,
        "transparent": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection,ElasticOverscroll --enable-features=msWebView2EnableDraggableRegions"
      }
    ]
  }
}
